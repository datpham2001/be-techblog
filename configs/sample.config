server:
  env: development  # development, staging, production
  host: "0.0.0.0"
  port: "8080"
  tls:
    enable: false
    cert_file: ""
    key_file: ""

database:
  host: "localhost"
  port: "5432"
  user: "postgres"
  password: "postgres"  # Change in production
  db_name: "techblog"
  ssl_mode: "disable"  # require, verify-full, disable
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: "5m"  # Go duration format: 5m, 1h, etc.

redis:
  host: "localhost"
  port: "6379"
  password: ""  # Set password in production
  db: 0

jwt_auth:
  secret_key: "your-secret-key-change-in-production-min-32-chars"  # Must be at least 32 characters
  access_token_exp: "24h"  # 24 hours as per requirements
  refresh_token_exp: "168h"  # 7 days

rate_limit:
  enable: true
  limit: 100  # requests per period
  period: "1m"  # 1 minute (100 reqs/min as per requirements)

cors:
  enable: true
  allowed_origins:
    - "http://localhost:3000"
    - "http://localhost:5173"
    - "https://yourdomain.com"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "PATCH"
    - "OPTIONS"
  allowed_headers:
    - "Content-Type"
    - "Authorization"
    - "X-Requested-With"
  allow_credentials: true

s3: {}  # S3 configuration to be added later
